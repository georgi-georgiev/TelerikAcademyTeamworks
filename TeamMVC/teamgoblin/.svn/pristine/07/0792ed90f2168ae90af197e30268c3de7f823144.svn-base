@model IEnumerable<GoblinFreelancer.ViewModels.ProjectViewModelFull>
@(Html.Kendo()
    .Grid(Model)
    .Name("Projects")
    .Columns(columns =>
        {
            columns.AutoGenerate(true);
        })
        .Pageable()
        .Sortable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Model(model => model.Id(b => b.Id))
            .PageSize(5)
            .ServerOperation(true)
            .Read("ReadProjects", "Projects")
            )
)

